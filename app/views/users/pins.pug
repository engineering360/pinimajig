extends ../layout
block content
  if isShowUser
    form.form-horizontal(method='post' action='/images/add')
      h3.col-sm-offset-2 Add Image <small> for #{user.username}</small>
      .form-group
        label.col-sm-2.control-label(for='url') Url
        .col-sm-10
          input#bookName.form-control(
            type='text'
            name='url'
            placeholder='http://...'
            required)
      .form-group
        label.col-sm-2.control-label(for='caption') Caption
        .col-sm-10
          input#caption.form-control(
            type='text'
            name='caption'
            placeholder='Describe the image...'
            required)
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-default(type='submit') Add Image

  .panel.panel-default
    .panel-heading: h2.text-center #{title}
    ul.list-goup
      each image in showUser.images
        li.list-group-item
          img(src=`${image.url}`)
          p #{image.url}
          p #{image.caption}
          if isShowUser
            p: a.btn.btn-danger(href=`/images/${image.id}/remove`) &times;
